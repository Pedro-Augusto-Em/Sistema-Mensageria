{
  "name": "sistema-mensageria-local",
  "version": "1.0.0",
  "description": "Sistema completo de mensageria para rede local com funcionalidades avançadas",
  "main": "dist/server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon --exec tsx src/server/index.ts",
    "dev:client": "cd client && npm start",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "cd client && npm run build",
    "start": "node dist/server/index.js",
    "install:all": "npm install && cd client && npm install",
    "init-db": "node scripts/init-db.js",
    "clean-db": "powershell -ExecutionPolicy Bypass -File scripts/clean-database.ps1",
    "clean-db-node": "node scripts/clean-database-node.js",
    "clean-users": "node scripts/clean-test-users.js",
    "setup": "npm install && npm run init-db",
    "test:api": "curl -X POST http://localhost:3001/api/auth/register -H \"Content-Type: application/json\" -d '{\"username\":\"teste\",\"email\":\"teste@teste.com\",\"password\":\"teste123\",\"fullName\":\"Usuário Teste\"}'",
    "tunnel:install": "powershell -ExecutionPolicy Bypass -File scripts/cloudflare-tunnel.ps1 install",
    "tunnel:create": "powershell -ExecutionPolicy Bypass -File scripts/cloudflare-tunnel.ps1 create",
    "tunnel:start": "powershell -ExecutionPolicy Bypass -File scripts/cloudflare-tunnel.ps1 start",
    "tunnel:stop": "powershell -ExecutionPolicy Bypass -File scripts/cloudflare-tunnel.ps1 stop",
    "tunnel:status": "powershell -ExecutionPolicy Bypass -File scripts/cloudflare-tunnel.ps1 status"
  },
  "keywords": [
    "mensageria",
    "chat",
    "websocket",
    "real-time",
    "local-network"
  ],
  "author": "Sistema de Mensageria",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "socket.io": "^4.7.4",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.5"
  }
}
